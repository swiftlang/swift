BEGIN {
  FS = ", "
  OFS = ", "
  print "Pass Name", "Lost Variables"
}

$1 == "function" && $2 == "lostvars" {
  stats[$4] += $6
}

END {
  for (i in stats)
    print i, stats[i]
}
