  typealias DWU32 = DoubleWidth<DWU16>
  typealias DWU64 = DoubleWidth<DWU32>

  func f(_ x: UInt64) {
    let y = DWU64(x)
    for i in -65...65 {
      expectTrue(x << i == y << i)
      expectTrue(x >> i == y >> i)
    }
  }

  f(1)
  f(~(~0 >> 1))
  f(.max)
  f(0b11110000_10100101_11110000_10100101_11110000_10100101_11110000_10100101)
}

