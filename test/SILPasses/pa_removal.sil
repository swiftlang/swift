bb0(%0 : $Int64):
  %1 = function_ref @our_closure_function1 : $@thin (Int64) -> Bool // user: %2
  %2 = partial_apply %1(%0) : $@thin (Int64) -> Bool // user: %3
  strong_release %2 : $@callee_owned () -> Bool   // id: %3
