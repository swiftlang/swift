// CHECK-LABEL: sil @closure_test2
sil @closure_test2 : $@thin (Int) -> Int {
bb0(%1 : $Int):
  %0 = alloc_box $Int
  store %1 to %0#1 : $*Int  // CHECK: store

  %5 = function_ref @takes_closure : $@thin (@callee_owned () -> ()) -> ()
  %6 = function_ref @closure0 : $@thin (@owned Builtin.NativeObject, @inout Int) -> ()
  strong_retain %0#0 : $Builtin.NativeObject
  %8 = partial_apply %6(%0#0, %0#1) : $@thin (@owned Builtin.NativeObject, @inout Int) -> ()
  %9 = apply %5(%8) : $@thin (@callee_owned () -> ()) -> ()
  strong_release %0#0 : $Builtin.NativeObject

  store %1 to %0#1 : $*Int // CHECK: store

  // In an escape region, we should not promote loads.
  %r = load %0#1 : $*Int // CHECK: load
  return %r : $Int
}



