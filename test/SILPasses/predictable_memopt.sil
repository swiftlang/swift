// CHECK-LABEL: sil @promote_alloc_stack
sil @promote_alloc_stack : $@thin (Int32) -> Builtin.Int32 {
bb0(%0 : $Int32):
  %5 = integer_literal $Builtin.Int32, 1
  // CHECK: [[IL:%[0-9]+]] = integer_literal

  %18 = struct $Int32 (%5 : $Builtin.Int32)
  %22 = alloc_stack $Int32

  // CHECK-NOT: alloc_stack

  store %18 to %22#1 : $*Int32
  %24 = struct_element_addr %22#1 : $*Int32, #Int32.value
  %25 = load %24 : $*Builtin.Int32
  dealloc_stack %22#0 : $*@local_storage Int32
  // CHECK-NEXT: return [[IL]]
  return %25 : $Builtin.Int32
}

// CHECK-LABEL: sil @copy_addr_to_load
sil @copy_addr_to_load : $@thin (Int) -> Int {
bb0(%0 : $Int):               // CHECK: bb0(%0 : $Int):
  %1 = alloc_stack $Int
  store %0 to %1#1 : $*Int
  %2 = alloc_stack $Int
  
  copy_addr %1#1 to [initialization] %2#1 : $*Int

  %3 = load %2#1 : $*Int

  dealloc_stack %2#0 : $*@local_storage Int
  dealloc_stack %1#0 : $*@local_storage Int
  // CHECK-NEXT: return %0
  return %3 : $Int
}

