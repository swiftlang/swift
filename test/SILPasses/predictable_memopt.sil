// CHECK-LABEL: sil @cross_block_load_promotion_struct
sil @cross_block_load_promotion_struct : $@thin (Int, Int) -> Int {
bb0(%0 : $Int, %2 : $Int):
  %1 = alloc_stack $XYStruct
  
  %7 = function_ref @init_xy_struct : $@thin () -> XYStruct
  %9 = apply %7() : $@thin () -> XYStruct
  store %9 to %1#1 : $*XYStruct

  %11 = struct_element_addr %1#1 : $*XYStruct, #XYStruct.y
  store %0 to %11 : $*Int

  %12 = integer_literal $Builtin.Int1, 1          // user: %3
  cond_br %12, bb1, bb2

bb1:                                              // Preds: bb3
  %13 = struct_element_addr %1#1 : $*XYStruct, #XYStruct.x
  store %2 to %13 : $*Int
  br bb5

bb2:                                              // Preds: bb0
  br bb5

bb5:                                              // Preds: bb4
  %15 = load %11 : $*Int
  dealloc_stack %1#0 : $*@local_storage XYStruct
  return %15 : $Int

// CHECK: return %0 : $Int
}

