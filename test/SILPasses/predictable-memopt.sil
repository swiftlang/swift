// CHECK-LABEL: sil @cross_block_load_promotion
sil @cross_block_load_promotion : $@thin (Int64) -> Int64 {
bb0(%0 : $Int64):
  %1 = alloc_stack $Int64
  store %0 to %1#1 : $*Int64
  %11 = integer_literal $Builtin.Int1, 1
  cond_br %11, bb1, bb2

bb1:
  br bb5

bb2:
  br bb5

bb5:
  %15 = load %1#1 : $*Int64
  dealloc_stack %1#0 : $*@local_storage Int64
  return %15 : $Int64

// CHECK: return %0 : $Int64
}

