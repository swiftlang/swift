  assign %23 to %14#1 : $*@callee_owned () -> Builtin.Int64
  br bb4

bb4:
  strong_release %14#0 : $Builtin.NativeObject
  strong_release %5#0 : $Builtin.NativeObject
  strong_release %4#0 : $Builtin.NativeObject
  strong_release %3#0 : $Builtin.NativeObject
  %30 = tuple ()
  return %30 : $()
}

