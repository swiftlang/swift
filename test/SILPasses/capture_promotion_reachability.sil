  store %17 to %14#1 : $*@callee_owned () -> Builtin.Int64
  %19 = load %3#1 : $*Builtin.Int1
  cond_br %19, bb3, bb4

bb3:
  // CHECK: [[CLOSURE1_PROMOTE0:%.*]] = function_ref @_TTSf2d_i__closure1 :
  %21 = function_ref @closure1 : $@convention(thin) (@owned Builtin.NativeObject, @inout Builtin.Int64) -> Builtin.Int64
