struct Fixed {
  var c: C
  var d: D
  var i: Builtin.Int64
}

sil @fixed_box : $@convention(thin) () -> () {
entry:
  %a = alloc_box $Fixed
  %b = project_box %a#0 : $@box Fixed
  dealloc_box %a#0 : $@box Fixed
  return undef : $()
}

struct Dyn<T> {
  var c: C
  var d: D
  var x: T
}

// CHECK-LABEL: define void @dyn_box_a
sil @dyn_box_a : $@convention(thin) <T> () -> () {
entry:
  // CHECK: [[METADATA:%.*]] = call %swift.type* @swift_getGenericMetadata
  // CHECK: [[ALLOC:%.*]] = call { %swift.refcounted*, %swift.opaque* } @swift_allocBox2(%swift.type* [[METADATA]])
  // CHECK: [[BOX:%.*]] = extractvalue { %swift.refcounted*, %swift.opaque* } [[ALLOC]], 0
  // CHECK: [[PTR:%.*]] = extractvalue { %swift.refcounted*, %swift.opaque* } [[ALLOC]], 1
  // CHECK: bitcast %swift.opaque* [[PTR]] to %V11typed_boxes3Dyn*
  %a = alloc_box $Dyn<T>
  // CHECK: [[PTR:%.*]] = call %swift.opaque* @swift_projectBox2(%swift.refcounted* [[BOX]], %swift.type* [[METADATA]])
  // CHECK: bitcast %swift.opaque* [[PTR]] to %V11typed_boxes3Dyn*
  %b = project_box %a#0 : $@box Dyn<T>
  // CHECK: call void @swift_deallocBox2(%swift.refcounted* [[BOX]], %swift.type* [[METADATA]])
  dealloc_box %a#0 : $@box Dyn<T>
  return undef : $()
}

