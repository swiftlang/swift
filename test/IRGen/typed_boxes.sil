  // CHECK: [[PTR:%.*]] = extractvalue { %swift.refcounted*, %swift.opaque* } [[ALLOC]], 1
  %a = alloc_box $T
  // CHECK: [[PTR:%.*]] = call %swift.opaque* @swift_projectBox2(%swift.refcounted* [[BOX]], %swift.type* %T)
